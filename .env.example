# P2000-NFTY Environment Variables
# Copy this file to .env and customize as needed

# Path to configuration file (default: config.yaml)
CONFIG_PATH=config.yaml

# Forward all messages regardless of capcode (true/false)
# When true, all P2000 messages are forwarded
# When false, only messages matching configured capcodes are forwarded
# Default: true
FORWARD_ALL=true

# ntfy server URL (overrides config file)
NTFY_SERVER=https://ntfy.nrkdci.net

# ntfy topic name (overrides config file)
NTFY_TOPIC=p2000-alerts

# Optional: ntfy authentication token
# NTFY_TOKEN=your-token-here

# HTTP server port (default: 8080)
SERVER_PORT=8080
